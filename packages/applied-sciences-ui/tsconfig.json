{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@mitigation/shared-components": ["../shared-components/src"],
      "@mitigation/shared-components/*": ["../shared-components/src/*"],
      "@mitigation/shared-models": ["../shared-models"],
      "@mitigation/shared-models/*": ["../shared-models/*"]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    { "path": "../shared-components" },
    { "path": "../shared-models" }
  ]
} 
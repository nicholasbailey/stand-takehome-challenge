{
  "name": "mitigation-rules-engine",
  "version": "1.0.0",
  "description": "Mitigation rules engine backend service",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:express --external:typeorm --external:pg --external:reflect-metadata --external:cors --external:dotenv --external:@mitigation/shared --external:expr-eval",
    "dev": "concurrently \"esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:express --external:typeorm --external:pg --external:reflect-metadata --external:cors --external:dotenv --external:@mitigation/shared --watch=forever\" \"nodemon dist/index.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@mitigation/shared": "*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expr-eval": "^2.0.2",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
